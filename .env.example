# FloatChat Environment Configuration
# Copy this file to .env and fill in your values

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=floatchat
POSTGRES_USER=floatchat
POSTGRES_PASSWORD=floatchat_secret_2024

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Ollama LLM
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# Vector Database
CHROMA_PERSIST_DIR=./data/chroma
FAISS_INDEX_PATH=./data/faiss

# Data Paths
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed

# ARGO Data Sources
INCOIS_FTP=ftp://ftp.incois.gov.in/argo
IFREMER_FTP=ftp://ftp.ifremer.fr/ifremer/argo

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Streamlit
STREAMLIT_PORT=8501
STREAMLIT_THEME=dark

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/floatchat.log

# Voice Recognition (Whisper)
WHISPER_MODEL=base
ENABLE_VOICE=true

# Alerts
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
ALERT_EMAIL=

# Feature Flags
ENABLE_3D_GLOBE=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_VOICE_COMMANDS=true
ENABLE_MULTI_LANGUAGE=true
